{
  "name": "hiccup",
  "description": "smart note-taking extension",
  "version": "0.0",
  "manifest_version": 3,

  "permissions": ["tabs", "storage", "unlimitedStorage", "scripting", "sidePanel"],
  "host_permissions": ["https://*/", "http://*/"],

  "background": {
    "service_worker": "background/service-worker.js",
    "type": "module"
  },

  "action": {
    "default_icon": "images/icon.png"
  },

  "side_panel": {
    "default_path": "sidepanel/sidepanel.html"
  }
}
